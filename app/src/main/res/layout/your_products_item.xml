<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    android:paddingTop="1dp"
    android:id="@+id/itemBackgroundYPA"
    >


    <ImageView
        android:id="@+id/imageViewYPA"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/productNameYPA"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="name"
        app:layout_constraintStart_toEndOf="@+id/imageViewYPA"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shopLogoYPA"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="231dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewYPA"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/countYPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="count"
        app:layout_constraintStart_toEndOf="@+id/imageViewYPA"
        app:layout_constraintTop_toBottomOf="@+id/productNameYPA" />

    <Button
        android:id="@+id/editButtonYPA"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteButtonYPA"
        app:layout_constraintTop_toBottomOf="@+id/countYPA" />

    <Button
        android:id="@+id/deleteButtonYPA"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countYPA" />

</androidx.constraintlayout.widget.ConstraintLayout>